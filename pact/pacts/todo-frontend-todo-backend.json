{
  "consumer": {
    "name": "todo-frontend"
  },
  "provider": {
    "name": "todo-backend"
  },
  "interactions": [
    {
      "description": "GET todos request",
      "providerState": "all todos successfully",
      "request": {
        "method": "GET",
        "path": "/todos"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": [
          {
            "id": 0,
            "task": "buy some milk"
          }
        ],
        "matchingRules": {
          "$.body": {
            "min": 1
          },
          "$.body[*].*": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "POST todos request",
      "providerState": "posted todo successfully",
      "request": {
        "method": "POST",
        "path": "/todos",
        "body": {
          "task": "get some bread"
        },
        "matchingRules": {
          "$.body": {
            "match": "type"
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "id": 0,
          "task": "buy some milk"
        },
        "matchingRules": {
          "$.body": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}